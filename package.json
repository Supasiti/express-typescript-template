{
  "name": "esg-report-server",
  "version": "0.1.0",
  "description": "backend for report automation",
  "main": "src/server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npx tsc",
    "dev": "concurrently \"npx tsc --watch\" \"export NODE_ENV=DEV && nodemon -q build/server.js\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dep:up": "docker-compose up -d",
    "dep:down": "docker-compose down -v",
    "migrate:up": "sh ./scripts/migration-up/migration.up.sh",
    "migrate:down": "sh ./scripts/migration-down/migration.down.sh"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "knex": "^2.4.2",
    "pg": "^8.11.0",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.1",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "concurrently": "^8.1.0",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "_moduleAliases": {
    "@": "build"
  }
}
